{
	"version": 2,
	"public": false,
	"github": {
		"enabled": false
	},
	"builds": [
		{ "src": "backend/build/index.js",
			"use": "@vercel/node",
			"config": { "includeFiles": ["backend/build/**"] }
		},
		{
			"src": "./frontend/build/**",
			"use": "@vercel/static",
			"config": { "includeFiles": ["frontend/build/**"] }
		}
	],
	"routes": [
		{
			"src": "/api/(.*)",
			"dest": "backend/build/src/index.js"
		},
		{
			"src": "/",
			"dest": "frontend/build/index.html"
		},
		{
			"src": "/(.+)",
			"dest": "frontend/build/$1"
		}
	],
	"rewrites": [{ "source": "/api/(.*)", "destination": "backend/build/index.js" }]
}
