{
	"version": 2,
	"builds":
	[
		{
			"src": "backend/build/src/index.js",
			"use": "@vercel/node",
			"config": { "includeFiles": ["backend/build/src/**"] }
		},
		{
			"src": "frontend/build/**",
			"use": "@vercel/static",
			"config": { "includeFiles": ["frontend/build/**"] }
		}
	],
	"routes":
	[
		{
			"src": "/api/(.*)",
			"dest": "backend/build/src/index.js"
		},
		{
			"src": "/",
			"dest": "frontend/build/index.html"
		},
		{
			"src": "/(.+)",
			"dest": "frontend/build/$1"
		}
	],
	"headers":
	[
		{
			"source": "/api/(.*)",
			"headers":
			[
				{
					"key": "Access-Control-Allow-Credentials",
					"value": "true"
				},
				{
					"key": "Access-Control-Allow-Origin",
					"value": "*"
				},
				{
					"key": "Access-Control-Allow-Methods",
					"value": "OPTIONS,GET,POST,PUT,PATCH,DELETE"
				}
			]
		}
	]
}

