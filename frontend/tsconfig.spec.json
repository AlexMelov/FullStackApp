{
	"extends": "./tsconfig.json",
	"compilerOptions":
	{
		"outDir": "./out-tsc/spec",
		"types":
		[
			"jest",
			"node"
		],
		"module": "commonjs",
		"emitDecoratorMetadata": true,
		"allowJs": true
	},
	"files":
	[
		"src/jest.config.js",
		"src/polyfills.ts"
	],
	"include":
	[
		"src/**/*.spec.ts",
		"src/**/*.d.ts"
	]
}
